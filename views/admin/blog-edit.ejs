<!DOCTYPE html>
<html lang="en">

<head>
    <%- include("../partials/_header")  %>
</head>

<body>

    <%- include("../partials/_nav")  %>

    <div class="container mt-3 gx-5">
        <form method="POST" enctype="multipart/form-data">
        <div class="row my-5">
     
                <div class="col-md-10">
                    <input type="hidden" name="blogid" value="<%= blog.id %>">
                    <input type="hidden" name="image" value="<%= blog.image %>">
                    <div class="row mb-3">
                        <label for="title" class="col-sm-1 col-form-label">Title</label>
                        <div class="col-sm-11">
                            <input type="text" class="form-control" id="title" name="title" value="<%= blog.title %>">
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label for="description" class="col-sm-1 col-form-label">Description</label>
                        <div class="col-sm-11">
                            <textarea name="description" class="form-control" rows="10"><%= blog.description %>
                            </textarea>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label for="image" class="col-sm-1 col-form-label">Image</label>
                        <div class="col-sm-11">
                            <img src="/static/images/<%= blog.image %>" alt="" width="150">
                            <input type="file" class="form-control" id="image" name="image">
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-sm-11 offset-sm-1">
                            <button type="submit" class="btn btn-primary">Save</button>
                        </div>
                    </div>

                </div>
                <div class="col-md-2">
                    <div class="row">
                        <% categories.forEach(category => { %>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="category_<%= category.id %>" name="categories[]" value="<%= category.id %>"
                                <%= blog.categories.some(cat => cat.id == category.id) ? "checked": ""%> />
                            <label class="form-check-label" for="category_<%= category.id %>">
                                <%= category.name %>
                            </label>
                        </div>
                        <% }) %>
                    </div>

                </div>
        </div>
    </form>
    </div>

</body>

</html>