<!DOCTYPE html>
<html lang="en">

<head>
    <%- include("../partials/_header")  %>
</head>

<body>

    <%- include("../partials/_nav")  %>

    <div class="container mt-3">
        <div class="row">
            <div class="col-md-12 mt-3">
                <% if (action != "undefined" && action =="edit") { %>
                <!--Action varsa (yani undefined değilse ve edit ise aşağıdaki kodu çalıştırır)-->
                <div class="alert alert-success">ID <%= blogid %> has been updated</div>
                <% } %>
                <% if (action != "undefined" && action =="create") { %>
                <div class="alert alert-success">Blog Created</div>
                <% } %>
                <% if (action != "undefined" && action =="delete") { %>
                <div class="alert alert-success">Blog Deleted</div>
                <% } %>
                <table class="table table-bordered table table-striped">
                    <thead>
                        <tr>
                            <th style="width: 50px;">ID</th>
                            <th style="width: 150px;">Image</th>
                            <th>Title</th>
                            <th>Category</th>
                            <th style="width: 150px;"></th>
                        </tr>
                    </thead>
                    <tbody>
                        <% blogs.forEach(blog => { %>
                        <tr>
                            <td><%= blog.dataValues.id %></td>
                            <td>
                                <img src="/static/images/<%= blog.dataValues.image %>" class="img-fluid" alt="">
                            </td>
                            <td><%= blog.dataValues.title %></td>
                            <td>
                                <% blog.categories.forEach(category => { %>
                                <p> <%= category.name %> </p>
                                <% }) %>
                            </td>
                            <td>
                                <a href="/admin/blogs/<%= blog.dataValues.id %>" class="btn btn-sm btn-primary">Edit</a>
                                <a href="/admin/blog/delete/<%= blog.dataValues.id %>"
                                    class="btn btn-sm btn-danger">Delete</a>
                            </td>
                        </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</body>

</html>